/**index.wxss**/
.wrap {
  width: 100%;
  height: auto;
}

.weather_now {
  width: 100%;
  height: auto;
  /* border-bottom: 1rpx solid#ddd; */
  padding:80rpx 40rpx;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.weather_now view {
  margin-bottom: 30rpx;
}

.site {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: bottom;
}

.temperature {
  font-size: 60rpx;
}

.weather_day {
  width: 100%;
  height: auto;
  padding: 40rpx 10rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #ddd;
}

