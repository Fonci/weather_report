/**index.wxss**/
.wrap {
  width: 100%;
  height: auto;
}

.weui-input {
  width: 50%;
  margin: 20rpx 0;
  border: 1rpx solid white;
  border-radius: 10rpx;
}

.search_list {
  width: 50%;
  height: auto;
  max-height: 500rpx;
  overflow: scroll;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.5);
}

.search_list view {
  text-align: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #ddd;
}

.weather_now {
  width: 100%;
  height: auto;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: left;
  border-bottom: 1rpx solid rgb(233, 222, 222);
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.weather_now view {
  margin-bottom: 30rpx;
}

.site {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: bottom;
}

.temperature {
  font-size: 60rpx;
}

.weather_hour {
  width: 96%;
  color: #444;
  font-size: 28rpx;
  display: flex;
  overflow-x: scroll;
  /* padding-bottom: 60rpx; */
}

.hour {
  margin: 0 30rpx;
}

.hour view {
  margin-bottom: 10rpx;
  text-align: center;
  white-space: nowrap;
}


.weather_day {
  width: 100%;
  height: auto;
  padding: 60rpx 0;
}

.day {
  padding: 40rpx 10rpx;
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #ddd;
  color: #444;
}